<?xml version="1.0"?>
<ruleset name="Firebear">
    <description>Firebear Studio Coding Standard (based on Magento2)</description>
    <rule ref="Magento2">
        <exclude name="Generic.CodeAnalysis.ForLoopWithTestFunctionCall.NotAllowed"/>
        <exclude name="Generic.Metrics.NestingLevel.TooHigh"/>
        <exclude name="Generic.PHP.NoSilencedErrors.Discouraged"/>
        <exclude name="Magento2.Classes.DiscouragedDependencies.ConstructorProxyInterceptor"/>
        <exclude name="Magento2.CodeAnalysis.EmptyBlock.DetectedCatch"/>
        <exclude name="Magento2.Exceptions.ThrowCatch.ThrowCatch"/>
        <exclude name="Magento2.Functions.DiscouragedFunction.Discouraged"/>
        <exclude name="Magento2.Functions.StaticFunction.StaticFunction"/>
        <exclude name="Magento2.Performance.ForeachArrayMerge.ForeachArrayMerge"/>
        <exclude name="Magento2.PHP.ReturnValueCheck.ImproperValueTesting"/>
        <exclude name="Squiz.Commenting.ClassComment.Missing"/>
    </rule>

    <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace">
        <properties>
            <property name="ignoreBlankLines" value="false"/>
        </properties>
    </rule>
</ruleset>
