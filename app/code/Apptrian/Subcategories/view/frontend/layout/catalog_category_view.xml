<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Apptrian\Subcategories\Block\GridList" 
                name="apptrian.subcategories.category.page.after" 
                template="Apptrian_Subcategories::grid_list.phtml" 
                after="-" 
                ifconfig="apptrian_subcategories/category_page/show_after_content" />
            <block class="Apptrian\Subcategories\Block\GridList" 
                name="apptrian.subcategories.category.page.before" 
                template="Apptrian_Subcategories::grid_list.phtml" 
                before="-" 
                ifconfig="apptrian_subcategories/category_page/show_before_content" />
        </referenceContainer>
    </body>
</page>
